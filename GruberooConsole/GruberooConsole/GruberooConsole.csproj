<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>Exe</OutputType>
		<TargetFramework>net8.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
	</PropertyGroup>

	<ItemGroup>
		<!-- bring in your real code folders -->
		<Compile Include="..\Models\**\*.cs" />
		<Compile Include="..\Services\**\*.cs" />
		<Compile Include="..\Features\**\*.cs" />

		<!-- link your actual Program (currently in /Gruberoo/program.cs) -->
		<Compile Include="..\..\Gruberoo\program.cs" Link="Program.cs" />
	</ItemGroup>

	<ItemGroup>
		<!-- ensure CSV files exist when you run from bin/Debug -->
		<None Include="..\Data-Files\**\*.csv" CopyToOutputDirectory="PreserveNewest" />
	</ItemGroup>

</Project>
